{% extends 'BGridBundle::layout.html.twig' %}

{% block body %}
<table>

    <thead>
        <tr>
            <td>Title</td>
            <td>Price</td>
            <td>Amount</td>
        </tr>
    </thead>
    <tbody data-bind="foreach: PriceItems">
        <tr>
            <td data-bind="text: title"></td>
            <td data-bind="text: price"></td>
            <td data-bind="text: amount"></td>
        </tr>
    </tbody>
</table>
{% endblock %}

{% block app_config %}
    {{ parent() }}
    App.Config.url = "{{ url }}";
{% endblock %}